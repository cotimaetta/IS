<style>
    @import url('https://fonts.googleapis.com/css2?family=DynaPuff:wght@400;700&family=Raleway:wght@100&family=Roboto:wght@100&family=Ubuntu:wght@300;400;500;700&display=swap');
    
    *{
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
    }
    .content{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 25px;
    }

    
    table{
        table-layout: fixed;
    }

    th, td {
        width: 200px;
        word-wrap: break-word;
    }
   
    
</style>

<body>


 
<% if user_signed_in? %>

        


      <table >
      <h1>Historial usos</h1>
                <tr>
                    <th> Patente del Auto </th>
                    <th> Modelo </th>
                    <th> Usuario </th>
                    <th> Fecha de alquiler </th>
                    <th> Cantidad de Horas </th>
                    <th>  Horas extras</th>
                    <th>Monto </th>
                </tr>   

      
            <% @historial_usos.each do |hu| %>
                  <tr>
                            <td><%= hu.auto.patente %></td>
                            <td><%= hu.auto.modelo %></td>
                            <td><%= hu.user.nombre %></td>
                            <td><%= hu.fechaInicio.day %>/<%= hu.fechaInicio.month %>/<%= hu.fechaInicio.year %> <%= hu.fechaInicio.hour %>:<%= hu.fechaInicio.min %></td>
                            <td><%= hu.cantHoras %> horas </td>
                            <td><%= hu.horasExtra %></td>
                            <td>$<%= hu.monto %></td>
                  </tr>
            <% end %>
            <%= will_paginate @historial_usos %>
       </table>  

       <div class="boton"><%= link_to 'Volver' , root_path, class: "btn btn-light"  %></div> 
       
       

     

<%end %>
